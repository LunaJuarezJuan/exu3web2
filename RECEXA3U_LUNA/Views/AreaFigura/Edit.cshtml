@model RECEXA3U_LUNA.Models.AreaFigura

@{
    ViewBag.Title = "Editar Área";
}

<h2>Editar Cálculo de Área</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.AreaId)

    <div class="form-horizontal">
        <h4>Datos del cálculo</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.FiguraId, "Figura", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.FiguraId, (SelectList)ViewBag.FiguraId, "Seleccione una figura", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FiguraId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Parametro1, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Parametro1, new { htmlAttributes = new { @class = "form-control", @type = "number", @step = "0.01" } })
                @Html.ValidationMessageFor(model => model.Parametro1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Parametro2, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Parametro2, new { htmlAttributes = new { @class = "form-control", @type = "number", @step = "0.01" } })
                @Html.ValidationMessageFor(model => model.Parametro2, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Parametro3, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Parametro3, new { htmlAttributes = new { @class = "form-control", @type = "number", @step = "0.01" } })
                @Html.ValidationMessageFor(model => model.Parametro3, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Observaciones, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Observaciones, new { @class = "form-control", rows = 3 })
                @Html.ValidationMessageFor(model => model.Observaciones, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}
